# Adapted EditorConfig from https://editorconfig.org

# Top-most EditorConfig file
root = true

# Line style
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# Default charset
[*]
charset = utf-8

# Indentation
[*]
indent_size = 2
indent_style = space